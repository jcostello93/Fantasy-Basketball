<h4 style= "margin-bottom: 0em;">Add a league:</h4>
<form id="addleague" action="/leagues" method="post">
League name: <input type="text" name="name"><br>
<input type="submit" value="Submit">
</form><br>


<table class="myTable">
<thead> 
    <th>League name</th> 
</thead> 
<tbody> 
    {{#each leagues}} 
    <tr> 
        <td>{{name}}</td> 
        <td><button onclick="deleteLeague({{id}})">Delete</button></td>
        <td><a href="/leagues/{{id}}">Update</a></td>
    </tr> 
    {{/each}} 
</tbody> 
</table> 

