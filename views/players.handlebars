<br>
<form id="searchplayer" action="/players/search" method="post">
Search by last name: <input type="text" name="searchname">
<input type="submit" value="Search">
</form>

<table class="myTable">
<thead> 
    <th>First name</th> 
    <th>Last name</th> 
    <th>Team</th>
    <th>Position(s)</th>
    <th>Years experience</th>  
</thead> 
<tbody> 
    {{#each players}} 
    <tr> 
        <td>{{fname}}</td> 
        <td>{{lname}}</td> 
        <td>{{team_name}}</td> 
        <td>{{pos}}</td>
        <td>{{years}}</td>
    </tr> 
    {{/each}} 
</tbody> 
</table>

<script defer>selectTeam({{teamId}});</script>


